<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_border_item"
    android:layout_marginTop="10dp"
    android:backgroundTint="#FFFFFF">

    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:src="@drawable/notfound" />

    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtNombreProductoPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
             />

        <TextView
            android:id="@+id/txtPrecioProductoPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:gravity="right"
            android:text="$ " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">1

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/deleteProd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_margin="10dp"

            app:fabSize="auto"
            android:backgroundTint="#FF7514"
            android:src="@drawable/delete" />

    </LinearLayout>
</LinearLayout>